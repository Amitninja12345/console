<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jboss.hal</groupId>
        <artifactId>hal-parent-with-dependencies</artifactId>
        <version>0.9.2</version>
        <relativePath>../parent-with-dependencies/pom.xml</relativePath>
    </parent>

    <artifactId>hal-docker</artifactId>
    <name>HAL :: Docker</name>
    <description>Builds a docker container with the latest WildFly and HAL.next</description>
    <packaging>docker-build</packaging>

    <dependencies>
        <dependency>
            <groupId>org.jboss.hal</groupId>
            <artifactId>hal-console</artifactId>
            <classifier>resources</classifier>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-jar</id>
                        <phase>never</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy</id>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <phase>process-resources</phase>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>hal-console</artifactId>
                                    <classifier>resources</classifier>
                                    <version>${project.version}</version>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.googlecode.maven-download-plugin</groupId>
                <artifactId>download-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>download-wildfly</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>http://download.jboss.org/wildfly/${wildfly.version}/wildfly-${wildfly.version}.zip</url>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>io.fabric8</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <logDate>default</logDate>
                    <verbose>true</verbose>
                    <images>
                        <image>
                            <alias>hal-console</alias>
                            <name>hpehl/hal-console</name>
                            <build>
                                <assembly>
                                    <mode>dir</mode>
                                    <user>jboss:jboss:jboss</user>
                                    <inline>
                                        <fileSets>
                                            <fileSet>
                                                <directory>${project.basedir}/src/main/docker</directory>
                                                <outputDirectory>.</outputDirectory>
                                                <includes>
                                                    <include>module.xml</include>
                                                </includes>
                                                <filtered>true</filtered>
                                            </fileSet>
                                            <fileSet>
                                                <directory>${project.build.directory}</directory>
                                                <outputDirectory>.</outputDirectory>
                                                <includes>
                                                    <include>wildfly-${wildfly.version}.zip</include>
                                                    <include>hal-console-${project.version}-resources.jar</include>
                                                </includes>
                                            </fileSet>
                                        </fileSets>
                                    </inline>
                                </assembly>
                                <from>jboss/base-jdk:8</from>
                                <tags>
                                    <tag>${project.version}</tag>
                                    <tag>latest</tag>
                                </tags>
                                <env>
                                    <WILDFLY_VERSION>${wildfly.version}</WILDFLY_VERSION>
                                    <JBOSS_HOME>/opt/jboss/wildfly</JBOSS_HOME>
                                    <LAUNCH_JBOSS_IN_BACKGROUND>true</LAUNCH_JBOSS_IN_BACKGROUND>
                                </env>
                                <ports>
                                    <port>8080</port>
                                    <port>9990</port>
                                </ports>
                                <runCmds>
                                    <run><![CDATA[
                                        cd $HOME \
                                        && unzip -o -q /maven/wildfly-$WILDFLY_VERSION.zip \
                                        && mv $HOME/wildfly-$WILDFLY_VERSION $JBOSS_HOME \
                                        && rm /maven/wildfly-$WILDFLY_VERSION.zip \
                                        && $JBOSS_HOME/bin/add-user.sh -u admin -p admin --silent
                                    ]]></run>
                                    <run>
                                        mv /maven/* $JBOSS_HOME/modules/system/layers/base/org/jboss/as/console/main
                                    </run>
                                </runCmds>
                                <cmd>
                                    <arg>/opt/jboss/wildfly/bin/standalone.sh</arg>
                                    <arg>-b</arg>
                                    <arg>0.0.0.0</arg>
                                    <arg>-bmanagement</arg>
                                    <arg>0.0.0.0</arg>
                                </cmd>
                            </build>
                        </image>
                    </images>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
