<module rename-to="app">
    <inherits name="com.google.gwt.user.User"/>
    <inherits name="ru.finam.slf4jgwt.logging.gwt.Logging"/>
    <inherits name="com.gwtplatform.mvp.MvpWithEntryPoint"/>

    <inherits name="org.jboss.hal.Ballroom"/>
    <inherits name="org.jboss.hal.Config"/>
    <inherits name="org.jboss.hal.Core"/>
    <inherits name="org.jboss.hal.DMR"/>
    <inherits name="org.jboss.hal.Flow"/>
    <inherits name="org.jboss.hal.Resources"/>


    <set-configuration-property name="gwtp.prebootstrapper"
                                value="org.jboss.hal.client.bootstrap.hal.HalPreBootstrapper"/>
    <set-configuration-property name="gwtp.bootstrapper"
                                value="org.jboss.hal.client.bootstrap.hal.ErraiBootstrapper"/>
    <extend-configuration-property name="gin.ginjector.modules"
                                   value="org.jboss.hal.client.gin.CompositeModule"/>

    <define-configuration-property name="hal.version" is-multi-valued="false"/>
    <set-configuration-property name="CssResource.enableGss" value="true"/>
</module>
