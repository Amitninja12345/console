<view>
    <vertical-navigation id="logging-vertical-navigation">
        <!--
            Root Logger
        -->
        <item id="logging-root-logger-item" title="Root Logger" icon="fa fa-sitemap">
            <metadata template="/{selected.profile}/subsystem=logging/root-logger=ROOT">
                <h1>Root Logger</h1>
                <p>{{metadata.getDescription().getDescription()}}</p>
                <form id="logging-root-logger-form">
                    <attributes>
                        <attribute name="filter-spec"/>
                        <attribute name="handlers"/>
                        <attribute name="level"/>
                    </attributes>
                </form>
            </metadata>
        </item>


        <!--
            Categories / Logger
        -->
        <item id="logging-categories-item" title="Categories" icon="fa fa-folder-open-o">
            <metadata template="/{selected.profile}/subsystem=logging/logger=*">
                <h1>Categories</h1>
                <p>{{metadata.getDescription().getDescription()}}</p>
                <table id="logging-categories-table" form-ref="logging-categories-form">
                    <actions>
                        <action id="logging-categories-add">
                            <handler ref="add-resource">
                                <attributes>
                                    <attribute name="name" unbound="true"/>
                                    <attribute name="filter-spec"/>
                                    <attribute name="handlers"/>
                                    <attribute name="level"/>
                                    <attribute name="use-parent-handlers"/>
                                </attributes>
                            </handler>
                        </action>
                        <action id="logging-categories-remove" handler-ref="remove-resource" scope="selected"/>
                    </actions>
                    <columns>
                        <column name="category"/>
                        <column name="level"/>
                    </columns>
                </table>
                <form id="logging-categories-form">
                    <attributes>
                        <attribute name="category"/>
                        <attribute name="filter-spec"/>
                        <attribute name="handlers"/>
                        <attribute name="level"/>
                        <attribute name="use-parent-handlers"/>
                    </attributes>
                </form>
            </metadata>
        </item>


        <item id="logging-handler-item" title="Handler" icon="fa fa-cogs">
            <!--
                Console Handler
            -->
            <sub-item id="logging-handler-console-tab" title="Console Handler">
                <metadata template="/{selected.profile}/subsystem=logging/console-handler=*">
                    <h1>Console Handler</h1>
                    <p>{{metadata.getDescription().getDescription()}}</p>
                    <table id="logging-handler-console-table" form-ref="logging-handler-console-form">
                        <actions>
                            <action id="logging-handler-console-add">
                                <handler ref="add-resource">
                                    <attributes>
                                        <attribute name="name" unbound="true"/>
                                        <attribute name="autoflush"/>
                                        <attribute name="enabled"/>
                                        <attribute name="encoding"/>
                                        <attribute name="filter-spec"/>
                                        <attribute name="formatter"/>
                                        <attribute name="named-formatter">
                                            <suggest-handler>
                                                <templates>
                                                    <!-- @formatter:off -->
                                                    <template address="/{selected.profile}/subsystem=logging/pattern-formatter=*"/>
                                                    <template address="/{selected.profile}/subsystem=logging/custom-formatter=*"/>
                                                    <!-- @formatter:on -->
                                                </templates>
                                            </suggest-handler>
                                        </attribute>
                                        <attribute name="level"/>
                                        <attribute name="target"/>
                                    </attributes>
                                </handler>
                            </action>
                            <action id="logging-handler-console-remove" handler-ref="remove-resource"
                                    scope="selected"/>
                        </actions>
                        <columns>
                            <column name="name" title="{{resources.constants().name()}}"/>
                            <column name="level"/>
                        </columns>
                    </table>
                    <form id="logging-handler-console-form">
                        <attributes>
                            <attribute name="autoflush"/>
                            <attribute name="enabled"/>
                            <attribute name="encoding"/>
                            <attribute name="filter-spec"/>
                            <attribute name="formatter"/>
                            <attribute name="named-formatter">
                                <suggest-handler>
                                    <templates>
                                        <!-- @formatter:off -->
                                        <template address="/{selected.profile}/subsystem=logging/pattern-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/custom-formatter=*"/>
                                        <!-- @formatter:on -->
                                    </templates>
                                </suggest-handler>
                            </attribute>
                            <attribute name="level"/>
                            <attribute name="target"/>
                        </attributes>
                    </form>
                </metadata>
            </sub-item>


            <!--
                File Handler
                TODO Add support for custom form item 'file'
            -->
            <sub-item id="logging-handler-file-tab" title="File Handler">
                <metadata template="/{selected.profile}/subsystem=logging/file-handler=*">
                    <h1>File Handler</h1>
                    <p>{{metadata.getDescription().getDescription()}}</p>
                    <table id="logging-handler-file-table" form-ref="logging-handler-file-form">
                        <actions>
                            <!-- custom handler since required attribute 'file' is of type OBJECT -->
                            <action id="logging-handler-file-add"
                                    handler="{{presenter.launchAddFileHandlerDialog()}}"/>
                            <action id="logging-handler-file-remove" handler-ref="remove-resource"
                                    scope="selected"/>
                        </actions>
                        <columns>
                            <column name="name" title="{{resources.constants().name()}}"/>
                            <column name="level"/>
                        </columns>
                    </table>
                    <form id="logging-handler-file-form">
                        <attributes>
                            <attribute name="append"/>
                            <attribute name="autoflush"/>
                            <attribute name="enabled"/>
                            <attribute name="encoding"/>
                            <attribute name="filter-spec"/>
                            <attribute name="formatter"/>
                            <attribute name="named-formatter">
                                <suggest-handler>
                                    <templates>
                                        <!-- @formatter:off -->
                                        <template address="/{selected.profile}/subsystem=logging/pattern-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/custom-formatter=*"/>
                                        <!-- @formatter:on -->
                                    </templates>
                                </suggest-handler>
                            </attribute>
                            <attribute name="level"/>
                            <attribute name="target"/>
                        </attributes>
                    </form>
                </metadata>
            </sub-item>


            <!--
                Async Handler
            -->
            <sub-item id="logging-handler-async-tab" title="Async Handler">
                <metadata template="/{selected.profile}/subsystem=logging/async-handler=*">
                    <h1>Async Handler</h1>
                    <p>{{metadata.getDescription().getDescription()}}</p>
                    <table id="logging-handler-async-table" form-ref="logging-handler-async-form">
                        <actions>
                            <action id="logging-handler-async-add">
                                <handler ref="add-resource">
                                    <attributes>
                                        <attribute name="name" unbound="true"/>
                                        <attribute name="level"/>
                                        <attribute name="subhandlers">
                                            <suggest-handler>
                                                <templates>
                                                    <!-- @formatter:off -->
                                                    <template address="/{selected.profile}/subsystem=logging/console-handler=*"/>
                                                    <template address="/{selected.profile}/subsystem=logging/custom-handler=*"/>
                                                    <template address="/{selected.profile}/subsystem=logging/file-handler=*"/>
                                                    <template address="/{selected.profile}/subsystem=logging/periodic-rotating-file-handler=*"/>
                                                    <template address="/{selected.profile}/subsystem=logging/periodic-size-rotating-file-handler=*"/>
                                                    <template address="/{selected.profile}/subsystem=logging/size-rotating-file-handler=*"/>
                                                    <template address="/{selected.profile}/subsystem=logging/syslog-handler=*"/>
                                                    <!-- @formatter:on -->
                                                </templates>
                                            </suggest-handler>
                                        </attribute>
                                        <attribute name="queue-length"/>
                                        <attribute name="overflow-action"/>
                                        <attribute name="filter-spec"/>
                                    </attributes>
                                </handler>
                            </action>
                            <action id="logging-handler-async-remove" handler-ref="remove-resource"
                                    scope="selected"/>
                        </actions>
                        <columns>
                            <column name="name" title="{{resources.constants().name()}}"/>
                            <column name="level"/>
                        </columns>
                    </table>
                    <form id="logging-handler-async-form">
                        <attributes>
                            <attribute name="level"/>
                            <attribute name="subhandlers">
                                <suggest-handler>
                                    <templates>
                                        <!-- @formatter:off -->
                                        <template address="/{selected.profile}/subsystem=logging/console-handler=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/custom-handler=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/file-handler=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/periodic-rotating-file-handler=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/periodic-size-rotating-file-handler=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/size-rotating-file-handler=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/syslog-handler=*"/>
                                        <!-- @formatter:on -->
                                    </templates>
                                </suggest-handler>
                            </attribute>
                            <attribute name="queue-length"/>
                            <attribute name="overflow-action"/>
                            <attribute name="filter-spec"/>
                        </attributes>
                    </form>
                </metadata>
            </sub-item>
            <!-- TODO Add sub items for periodic, periodic-size, size, custom and syslog handlers -->
        </item>


        <item id="logging-formatter-item" title="Formatter" icon="fa fa-pencil">
            <!--
                Pattern Formatter
            -->
            <sub-item id="logging-formatter-pattern" title="Pattern Formatter">
                <metadata template="/{selected.profile}/subsystem=logging/pattern-formatter=*">
                    <h1>Pattern Formatter</h1>
                    <p>{{metadata.getDescription().getDescription()}}</p>
                    <table id="logging-formatter-pattern-table" form-ref="logging-formatter-pattern-form">
                        <actions>
                            <action id="logging-formatter-pattern-add">
                                <handler ref="add-resource">
                                    <attributes>
                                        <attribute name="name" unbound="true"/>
                                        <attribute name="color-map"/>
                                        <attribute name="pattern"/>
                                    </attributes>
                                </handler>
                            </action>
                            <action id="logging-formatter-pattern-remove" handler-ref="remove-resource"
                                    scope="selected"/>
                        </actions>
                        <columns>
                            <column name="name" title="{{resources.constants().name()}}"/>
                            <column name="pattern"/>
                        </columns>
                    </table>
                    <form id="logging-formatter-pattern-form">
                        <attributes>
                            <attribute name="color-map"/>
                            <attribute name="pattern"/>
                        </attributes>
                    </form>
                </metadata>
            </sub-item>


            <!--
                Custom Formatter
            -->
            <sub-item id="logging-formatter-custom" title="Pattern Formatter">
                <metadata template="/{selected.profile}/subsystem=logging/custom-formatter=*">
                    <h1>Custom Formatter</h1>
                    <p>{{metadata.getDescription().getDescription()}}</p>
                    <table id="logging-formatter-custom-table" form-ref="logging-formatter-custom-form">
                        <actions>
                            <action id="logging-formatter-custom-add">
                                <handler ref="add-resource">
                                    <attributes>
                                        <attribute name="name" unbound="true"/>
                                        <attribute name="class"/>
                                        <attribute name="module"/>
                                    </attributes>
                                </handler>
                            </action>
                            <action id="logging-formatter-custom-remove" handler-ref="remove-resource"
                                    scope="selected"/>
                        </actions>
                        <columns>
                            <column name="name" title="{{resources.constants().name()}}"/>
                        </columns>
                    </table>
                    <form id="logging-formatter-custom-form">
                        <attributes>
                            <attribute name="class"/>
                            <attribute name="module"/>
                            <attribute name="properties"/>
                        </attributes>
                    </form>
                </metadata>
            </sub-item>
        </item>
    </vertical-navigation>
</view>