<view>
    <vertical-navigation id="logging-vertical-navigation">
        <!--
            Root Logger
        -->
        <item id="logging-root-logger-item" title="Root Logger" icon="fa fa-sitemap">
            <metadata address="/{selected.profile}/subsystem=logging/root-logger=ROOT">
                <h1>Root Logger</h1>
                <p>{{metadata.getDescription().getDescription()}}</p>
                <form id="logging-root-logger-form" title="Root Logger" auto-save="true">
                    <attributes>
                        <attribute name="filter-spec"/>
                        <attribute name="handlers">
                            <suggest-handler>
                                <templates>
                                    <!-- @formatter:off -->
                                    <template address="/{selected.profile}/subsystem=logging/async-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/console-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/custom-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/file-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/periodic-rotating-file-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/periodic-size-rotating-file-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/size-rotating-file-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/syslog-handler=*"/>
                                    <!-- @formatter:on -->
                                </templates>
                            </suggest-handler>
                        </attribute>
                        <attribute name="level"/>
                    </attributes>
                </form>
            </metadata>
        </item>


        <!--
            Categories / Logger
        -->
        <item id="logging-categories-item" title="Categories" icon="pficon pficon-repository">
            <metadata address="/{selected.profile}/subsystem=logging/logger=*">
                <h1>Categories</h1>
                <p>{{metadata.getDescription().getDescription()}}</p>
                <table id="logging-categories-table" title="Category" form-ref="logging-categories-form">
                    <actions>
                        <action handler-ref="add-resource">
                            <attributes>
                                <attribute name="filter-spec"/>
                                <attribute name="handlers">
                                    <suggest-handler>
                                        <templates>
                                            <!-- @formatter:off -->
                                            <template address="/{selected.profile}/subsystem=logging/async-handler=*"/>
                                            <template address="/{selected.profile}/subsystem=logging/console-handler=*"/>
                                            <template address="/{selected.profile}/subsystem=logging/custom-handler=*"/>
                                            <template address="/{selected.profile}/subsystem=logging/file-handler=*"/>
                                            <template address="/{selected.profile}/subsystem=logging/periodic-rotating-file-handler=*"/>
                                            <template address="/{selected.profile}/subsystem=logging/periodic-size-rotating-file-handler=*"/>
                                            <template address="/{selected.profile}/subsystem=logging/size-rotating-file-handler=*"/>
                                            <template address="/{selected.profile}/subsystem=logging/syslog-handler=*"/>
                                            <!-- @formatter:on -->
                                        </templates>
                                    </suggest-handler>
                                </attribute>
                                <attribute name="level"/>
                                <attribute name="use-parent-handlers"/>
                            </attributes>
                        </action>
                        <action handler-ref="remove-resource" scope="selected"
                                name-resolver="{{api.selectedRow().getName()}}"/>
                    </actions>
                    <columns>
                        <column name="category"/>
                        <column name="level"/>
                    </columns>
                </table>
                <form id="logging-categories-form" title="Category" auto-save="true"
                      name-resolver="{{form.getModel().getName()}}">
                    <attributes>
                        <attribute name="category"/>
                        <attribute name="filter-spec"/>
                        <attribute name="handlers">
                            <suggest-handler>
                                <templates>
                                    <!-- @formatter:off -->
                                    <template address="/{selected.profile}/subsystem=logging/async-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/console-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/custom-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/file-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/periodic-rotating-file-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/periodic-size-rotating-file-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/size-rotating-file-handler=*"/>
                                    <template address="/{selected.profile}/subsystem=logging/syslog-handler=*"/>
                                    <!-- @formatter:on -->
                                </templates>
                            </suggest-handler>
                        </attribute>
                        <attribute name="level"/>
                        <attribute name="use-parent-handlers"/>
                    </attributes>
                </form>
            </metadata>
        </item>


        <item id="logging-handler-item" title="Handler" icon="fa fa-cogs">
            <!--
                Console Handler
            -->
            <sub-item id="logging-handler-console-item" title="Console Handler">
                <metadata address="/{selected.profile}/subsystem=logging/console-handler=*">
                    <h1>Console Handler</h1>
                    <p>{{metadata.getDescription().getDescription()}}</p>
                    <table id="logging-handler-console-table" form-ref="logging-handler-console-form">
                        <actions>
                            <action handler-ref="add-resource">
                                <attributes>
                                    <attribute name="autoflush"/>
                                    <attribute name="enabled"/>
                                    <attribute name="encoding"/>
                                    <attribute name="filter-spec"/>
                                    <attribute name="formatter"/>
                                    <attribute name="named-formatter">
                                        <suggest-handler>
                                            <templates>
                                                <!-- @formatter:off -->
                                                <template address="/{selected.profile}/subsystem=logging/pattern-formatter=*"/>
                                                <template address="/{selected.profile}/subsystem=logging/custom-formatter=*"/>
                                                <!-- @formatter:on -->
                                            </templates>
                                        </suggest-handler>
                                    </attribute>
                                    <attribute name="level"/>
                                    <attribute name="target"/>
                                </attributes>
                            </action>
                            <action handler-ref="remove-resource" scope="selected"
                                    name-resolver="{{api.selectedRow().getName()}}"/>
                        </actions>
                        <columns>
                            <column name="name"/>
                            <column name="level"/>
                        </columns>
                    </table>
                    <form id="logging-handler-console-form" auto-save="true"
                          name-resolver="{{form.getModel().getName()}}">
                        <attributes>
                            <attribute name="autoflush"/>
                            <attribute name="enabled"/>
                            <attribute name="encoding"/>
                            <attribute name="filter-spec"/>
                            <attribute name="formatter"/>
                            <attribute name="named-formatter">
                                <suggest-handler>
                                    <templates>
                                        <!-- @formatter:off -->
                                        <template address="/{selected.profile}/subsystem=logging/pattern-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/custom-formatter=*"/>
                                        <!-- @formatter:on -->
                                    </templates>
                                </suggest-handler>
                            </attribute>
                            <attribute name="level"/>
                            <attribute name="target"/>
                        </attributes>
                    </form>
                </metadata>
            </sub-item>


            <!--
                File Handler
                TODO Add support for custom form item 'file'
            -->
            <sub-item id="logging-handler-file-item" title="File Handler">
                <metadata address="/{selected.profile}/subsystem=logging/file-handler=*">
                    <h1>File Handler</h1>
                    <p>{{metadata.getDescription().getDescription()}}</p>
                    <table id="logging-handler-file-table" form-ref="logging-handler-file-form">
                        <actions>
                            <!-- custom handler since required attribute 'file' is of type OBJECT -->
                            <action handler="{{presenter.launchAddFileHandlerDialog()}}"
                                    title="{{mbuiContext.resources().constants().add()}}"/>
                            <action handler-ref="remove-resource" scope="selected"
                                    name-resolver="{{api.selectedRow().getName()}}"/>
                        </actions>
                        <columns>
                            <column name="name"/>
                            <column name="level"/>
                        </columns>
                    </table>
                    <form id="logging-handler-file-form" auto-save="true" name-resolver="{{form.getModel().getName()}}">
                        <attributes>
                            <attribute name="file"/>
                            <attribute name="append"/>
                            <attribute name="autoflush"/>
                            <attribute name="enabled"/>
                            <attribute name="encoding"/>
                            <attribute name="filter-spec"/>
                            <attribute name="formatter"/>
                            <attribute name="named-formatter">
                                <suggest-handler>
                                    <templates>
                                        <!-- @formatter:off -->
                                        <template address="/{selected.profile}/subsystem=logging/pattern-formatter=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/custom-formatter=*"/>
                                        <!-- @formatter:on -->
                                    </templates>
                                </suggest-handler>
                            </attribute>
                            <attribute name="level"/>
                            <attribute name="target"/>
                        </attributes>
                    </form>
                </metadata>
            </sub-item>


            <!--
                Async Handler
            -->
            <sub-item id="logging-handler-async-item" title="Async Handler">
                <metadata address="/{selected.profile}/subsystem=logging/async-handler=*">
                    <h1>Async Handler</h1>
                    <p>{{metadata.getDescription().getDescription()}}</p>
                    <table id="logging-handler-async-table" form-ref="logging-handler-async-form">
                        <actions>
                            <action handler-ref="add-resource">
                                <attributes>
                                    <attribute name="level"/>
                                    <attribute name="subhandlers">
                                        <suggest-handler>
                                            <templates>
                                                <!-- @formatter:off -->
                                                <template address="/{selected.profile}/subsystem=logging/console-handler=*"/>
                                                <template address="/{selected.profile}/subsystem=logging/custom-handler=*"/>
                                                <template address="/{selected.profile}/subsystem=logging/file-handler=*"/>
                                                <template address="/{selected.profile}/subsystem=logging/periodic-rotating-file-handler=*"/>
                                                <template address="/{selected.profile}/subsystem=logging/periodic-size-rotating-file-handler=*"/>
                                                <template address="/{selected.profile}/subsystem=logging/size-rotating-file-handler=*"/>
                                                <template address="/{selected.profile}/subsystem=logging/syslog-handler=*"/>
                                                <!-- @formatter:on -->
                                            </templates>
                                        </suggest-handler>
                                    </attribute>
                                    <attribute name="queue-length"/>
                                    <attribute name="overflow-action"/>
                                    <attribute name="filter-spec"/>
                                </attributes>
                            </action>
                            <action handler-ref="remove-resource" scope="selected"
                                    name-resolver="{{api.selectedRow().getName()}}"/>
                        </actions>
                        <columns>
                            <column name="name"/>
                            <column name="level"/>
                        </columns>
                    </table>
                    <form id="logging-handler-async-form" auto-save="true"
                          name-resolver="{{form.getModel().getName()}}">
                        <attributes>
                            <attribute name="level"/>
                            <attribute name="subhandlers">
                                <suggest-handler>
                                    <templates>
                                        <!-- @formatter:off -->
                                        <template address="/{selected.profile}/subsystem=logging/console-handler=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/custom-handler=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/file-handler=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/periodic-rotating-file-handler=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/periodic-size-rotating-file-handler=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/size-rotating-file-handler=*"/>
                                        <template address="/{selected.profile}/subsystem=logging/syslog-handler=*"/>
                                        <!-- @formatter:on -->
                                    </templates>
                                </suggest-handler>
                            </attribute>
                            <attribute name="queue-length"/>
                            <attribute name="overflow-action"/>
                            <attribute name="filter-spec"/>
                        </attributes>
                    </form>
                </metadata>
            </sub-item>

            <!-- TODO Add sub items for periodic, periodic-size, size, custom and syslog handlers -->
        </item>


        <item id="logging-formatter-item" title="Formatter" icon="fa fa-paint-brush">
            <!--
                Pattern Formatter
            -->
            <sub-item id="logging-formatter-pattern-item" title="Pattern Formatter">
                <metadata address="/{selected.profile}/subsystem=logging/pattern-formatter=*">
                    <h1>Pattern Formatter</h1>
                    <p>{{metadata.getDescription().getDescription()}}</p>
                    <table id="logging-formatter-pattern-table" form-ref="logging-formatter-pattern-form">
                        <actions>
                            <action handler-ref="add-resource"/>
                            <action handler-ref="remove-resource" scope="selected"
                                    name-resolver="{{api.selectedRow().getName()}}"/>
                        </actions>
                        <columns>
                            <!-- log formatter resources do not have a name attribute,
                            so we need to provide a value which calls NamedNode.getName() -->
                            <column name="name" value="{{row.getName()}}"/>
                            <column name="pattern"/>
                        </columns>
                    </table>
                    <form id="logging-formatter-pattern-form" auto-save="true"
                          name-resolver="{{form.getModel().getName()}}">
                        <attributes>
                            <attribute name="color-map"/>
                            <attribute name="pattern"/>
                        </attributes>
                    </form>
                </metadata>
            </sub-item>


            <!--
                Custom Formatter
            -->
            <sub-item id="logging-formatter-custom-item" title="Custom Formatter">
                <metadata address="/{selected.profile}/subsystem=logging/custom-formatter=*">
                    <h1>Custom Formatter</h1>
                    <p>{{metadata.getDescription().getDescription()}}</p>
                    <table id="logging-formatter-custom-table" form-ref="logging-formatter-custom-form">
                        <actions>
                            <action handler-ref="add-resource"/>
                            <action handler-ref="remove-resource" scope="selected"
                                    name-resolver="{{api.selectedRow().getName()}}"/>
                        </actions>
                        <columns>
                            <!-- log formatter resources do have not a name attribute,
                            so we need to provide a value which calls NamedNode.getName() -->
                            <column name="name" value="{{row.getName()}}"/>
                        </columns>
                    </table>
                    <form id="logging-formatter-custom-form" auto-save="true"
                          name-resolver="{{form.getModel().getName()}}">
                        <attributes>
                            <attribute name="class"/>
                            <attribute name="module"/>
                            <attribute name="properties"/>
                        </attributes>
                    </form>
                </metadata>
            </sub-item>
        </item>
    </vertical-navigation>
</view>