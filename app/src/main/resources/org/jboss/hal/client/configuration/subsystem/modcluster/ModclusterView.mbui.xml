<view>
    <vertical-navigation id="modcluster-vertical-navigation">
        <item id="modcluster-advertising-item" title="Advertising" icon="fa fa-shopping-cart">
            <metadata address="/{selected.profile}/subsystem=modcluster/mod-cluster-config=configuration">
                <form id="modcluster-advertising-form" title="Advertising" auto-save="true">
                    <attributes>
                        <attribute name="connector"/>
                        <attribute name="load-balancing-group"/>
                        <attribute name="balancer"/>
                        <attribute name="advertise-socket"/>
                        <attribute name="advertise-security-key"/>
                        <attribute name="advertise"/>
                    </attributes>
                </form>
            </metadata>
        </item>

        <item id="modcluster-sessions-item" title="Sessions" icon="pficon pficon-users">
            <metadata address="/{selected.profile}/subsystem=modcluster/mod-cluster-config=configuration">
                <form id="modcluster-sessions-form" title="Sessions" auto-save="true">
                    <attributes>
                        <attribute name="sticky-session"/>
                        <attribute name="sticky-session-force"/>
                        <attribute name="sticky-session-remove"/>
                    </attributes>
                </form>
            </metadata>
        </item>

        <item id="modcluster-web-contexts-item" title="Web Contexts" icon="pficon pficon-repository">
            <metadata address="">

            </metadata>
        </item>

        <item id="modcluster-proxies-item" title="Proxies" icon="pficon pficon-build">
            <metadata address="">

            </metadata>
        </item>

        <item id="modcluster-ssl-item" title="SSL" icon="fa fa-lock">
            <metadata address="">

            </metadata>
        </item>

        <item id="modcluster-networking-item" title="Networking" icon="pficon pficon-network">
            <metadata address="">

            </metadata>
        </item>
    </vertical-navigation>
</view>